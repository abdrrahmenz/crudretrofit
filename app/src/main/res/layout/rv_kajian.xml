<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".Frag_listkajian"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardPekan"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="4dp"
    android:layout_marginRight="4dp"
    android:layout_marginBottom="4dp"
    card_view:cardElevation="3dp"
    card_view:contentPadding="0dp"
    card_view:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="2"
            android:gravity="center"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp">

            <TextView
                android:id="@+id/txt_id"
                android:text="ID"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/txt_typekjian"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/txt_masjid"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/txt_day"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/txt_pekan"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


            <TextView
                android:id="@+id/txt_tema"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tema : "
                android:drawablePadding="4dp"
                android:gravity="center_vertical"
                android:textColor="#433f3f"
                android:fontFamily="sans-serif-condensed"
                android:paddingLeft="4dp"
                android:textStyle="bold"
                android:textSize="18sp"/>
            <TextView
                android:id="@+id/txt_pemateri"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pemateri : "
                android:drawablePadding="4dp"
                android:gravity="center_vertical"
                android:fontFamily="sans-serif-condensed"
                android:textColor="#433f3f"
                android:paddingLeft="4dp"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/txt_lat"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/txt_lng"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/txt_lokasi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Lokasi : "
                android:drawablePadding="4dp"
                android:gravity="center_vertical"
                android:fontFamily="sans-serif-condensed"
                android:textColor="#433f3f"
                android:paddingLeft="4dp"
                android:textSize="16sp"/>
            <TextView
                android:id="@+id/txt_cp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="CP : "
                android:drawablePadding="4dp"
                android:gravity="center_vertical"
                android:fontFamily="sans-serif-condensed"
                android:textColor="#433f3f"
                android:paddingBottom="4dp"
                android:paddingLeft="4dp"
                android:textSize="16sp"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="1">
            <RelativeLayout
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp">
                <TextView
                    android:id="@+id/txt_bulan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:layout_marginTop="43dp"
                    android:gravity="center_horizontal"
                    android:text="Jan"
                    android:textSize="27sp"/>
                <TextView
                    android:id="@+id/txt_tanggal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_alignParentTop="true"
                    android:layout_marginBottom="-73dp"
                    android:textColor="#000"
                    android:layout_above="@id/txt_bulan"
                    android:textStyle="bold"
                    android:text="24"
                    android:textSize="20sp" />


                <RelativeLayout
                    android:id="@+id/txt_clock"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_below="@id/txt_bulan"
                    android:layout_alignParentBottom="true"
                    android:layout_marginTop="-7dp">

                    <TextView
                        android:id="@+id/txt_mulai"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textColor="#000"
                        android:textStyle="bold"
                        android:paddingLeft="8dp"
                        android:paddingTop="4dp"
                        android:layout_gravity="center_horizontal"
                        android:text="18.00"
                        android:textSize="16sp"
                        android:layout_alignParentLeft="true" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:textColor="#000"
                        android:textStyle="bold"
                        android:layout_centerInParent="true"
                        android:layout_gravity="center_horizontal"
                        android:text="-"
                        android:paddingBottom="17dp"
                        android:textSize="14dp"/>

                    <TextView
                        android:id="@+id/txt_sampai"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_alignParentRight="true"
                        android:paddingRight="8dp"
                        android:paddingTop="4dp"
                        android:textColor="#000"
                        android:textStyle="bold"
                        android:text="20.00"
                        android:textSize="16sp"/>
                </RelativeLayout>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>